                        <?= $page->label; ?>            
                    </a>
                    <ul id="submenu-id-<?= $key; ?>" class="collapse list-unstyled sidebar-components">
                        <li>
                            <?php foreach ($page->pages as $subpage): ?>
                                <?= $this->navigation()->menu()->htmlify($subpage); ?>
                            <?php endforeach; ?>
                        </li>
                    </ul>
